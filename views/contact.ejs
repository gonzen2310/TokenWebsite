<!--INCLUDE HEADER-->
<%include partials/header%>
<section>
  <div class="row text-center parallax" style="display: flex; flex-wrap:wrap; margin:0;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 map">
                <div class="thumbnail thumbnailmap">
                    <img class="image-responsive contactimage" src="https://i.imgur.com/Vp65DuO.jpg">
                </div>
            </div>
            <div class="col-md-12 contactcontent">
              <div class="col-md-4">
              <div class="thumbnail thumbnailinfo">
                  <h3>Xtra value</h3> 
                  <p>5405 NW 193rd St.<br>Miami Gardens<br>FL 33014-USA</p>
                  <p>Tel: 1 (786) 299-7218</p>
                  <img src="https://i.imgur.com/qV02NkMb.jpg">
              </div>
            </div>
            <div class="col-md-8">
              <div class="thumbnail thumbnailinfo">
                 <form class="form-horizontal">
                            <div class="form-group">
                              <label class="col-sm-2 control-label">Name</label>
                              <div class="col-sm-10">
                                <input class="form-control" id="focusedInput" type="text" placeholder="Name">
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="col-sm-2 control-label" for="email">Email</label>
                              <div class="col-sm-10">
                                <input class="form-control" id="email" type="email" placeholder="Email">
                              </div>
                            </div>
                             <div class="form-group">
                            <label for="inquirytype" class="col-sm-2 control-label">Inquiry</label>
                            <div class="col-sm-10">
                              <select id="inquirytype" class="form-control">
                                <option>Customer Care</option>
                                <option>Marketing</option>
                                <option>Employment/HR</option>
                                <option>General/Other</option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 control-label" for="inquiry">Your inquiry</label>
                              <div class="col-sm-10">
                                  <textarea class="form-control" rows="5" id="inquiry"></textarea>
                                  <button type="submit" class="btn btn-default">Submit</button><br>
                                  <p>For inmediate inquiries please contact <a href="mailto:xtravalue@yahoo.com?Subject=Important%20mail" target="_top">xtravalue@yahoo.com</a></p>
                              </div>
                            </div>
                        </form>  
              </div>
            </div>
              
            </div>
          
            </div>
        </div>
    </div>
  </div>
</section>

