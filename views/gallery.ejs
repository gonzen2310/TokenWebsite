<!--INCLUDE HEADER-->
<%include partials/header%>

<section>

    <div class="row text-center parallax" style="display: flex; flex-wrap:wrap">
        <div class="container ">
    <header class="jumbotron">
        <h1>Our Collection Spring/Summer 2018</h1>
        

    </header>
        <% collection.forEach(function(shirt){ %>
            
        <div class="col-md-4 col-xs-6">
            <a href="/gallery/<%= shirt._id%>" class="thumbnail" style="background: #000000;">
                <img style="width: 100%; height: 500px; background-size: cover; background-position: center center;" src="<%=shirt.image%>">
            </a>
        </div>
            
        <% }); %>
    </div>
</div>
</section>


<!--INCLUDE FOOTER-->
<%include partials/footer%>